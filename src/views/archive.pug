mixin archive_entry( args )
	.archive__entry.entry: .row.center-xs.middle-xs
		.col-xs-12.col-sm-6.col-md-4
			a.thumbnail( href="#" ): img.lazy.wp-post-thumbnail( src="#", data-src=args.thumbnail, alt=args.title )
		.col-xs-12.col-sm-6.col-md-8: .overlay
			h3.title: a( href="#" ) #{args.title}
			p.excerpt #{args.excerpt}
			.row
				.col-xs-7
					p #[a.btn.btn-sm.btn-success( href="#" ) Подробней]
				.col-xs-5
					p.info #[span.sr-only Опубликовано] #[time.small( datetime="2004-07-24T18:18:18+04:00" ) 2020.12.5]



