



mixin partner( args )
	a.partners__item.item( href=args.permalink )
		img( src="#", data-lazy=args.logo, alt=args.title )


.partners#partners: .container: .slider
	#partners-list
		+partner( { permalink: '#', logo: src.img+'partners/metinvest.jpg', title: 'Метинвест' } )
		+partner( { permalink: '#', logo: src.img+'partners/mon.png', title: 'МОН' } )
		+partner( { permalink: '#', logo: src.img+'partners/dtek.png', title: 'ДТЭК' } )
		+partner( { permalink: '#', logo: src.img+'partners/mrpl.png', title: 'Мар Рада' } )
		+partner( { permalink: '#', logo: src.img+'partners/er.jpg', title: 'Erasmus' } )
	#partners-controls.controls
		button.arrow.prev#partners-arrow-prev #[span.sr-only Предыдущий слайд]
		button.arrow.next#partners-arrow-next #[span.sr-only Следующий слайд]