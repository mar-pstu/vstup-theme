




mixin firstscreen_entry( args )
	.slide: .jumbotron
		.bg
		img( data-lazy=args.thumbnail, style="display: none;" )
		.container
			h3.title #{args.title}
			.excerpt #{args.excerpt}
			a.btn.btn-success Подробней
			include ../navs/_warning
			.blogname ПДТУ



#firstscreen.firstscreen.slider
	#firstscreen-list
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/european-education.jpg',
			title: 'Ваша цель получить высшее образование европейского уровня?',
			excerpt: 'Приазовский государственный технический университет входит в европейскую зону высшего образования, которая обеспечивает мобильность трудоустройства. Наша система образования совместима с европейскими.'
		} )
		+firstscreen_entry( {
			thumbnail: 'https://pstu.edu/wp-content/uploads/2018/08/Наука.jpg',
			title: 'Вы мечтаете внести свой вклад в науку?',
			excerpt: 'Научная деятельность студентов Приазовского государственного технического университета обеспечивает их высокую квалификацию как специалистов. Они применяют в практической деятельности новейшие достижения науки.'
		} )
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/foreign-students.jpg',
			title: 'Вы иностранец и хотите учиться в Украине?',
			excerpt: 'Студенты Приазовского государственного технического университета получают языковую подготовку и адаптацию, достойный уровень образования всех уровней, и в перспективе вид на жительство.'
		} )
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/langeage.jpg',
			title: 'Хотите овладеть иностранным языком и получить международные сертификаты?',
			excerpt: 'Международный образовательно-квалификационный центр Приазовского государственного технического университета осуществляет подготовку студентов к сдаче международных екзаменов по иностранному языку.'
		} )
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/leisure.jpg',
			title: 'Вы хотите учиться и заниматься спортом, иметь интересный досуг?',
			excerpt: 'Студенческие годы проведённые в стенах Приазовского государственного технического университета – отдельная маленькая жизнь, наполнена самыми крутыми событиями, созиданием и энергией.'
		} )
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/vsu.jpg',
			title: 'Вы хотите получить военную профессию и защищать Украину?',
			excerpt: 'Пройдите обучение на военной кафедре Приазовского государственного технического университета и получите военную специальность параллельно с обучением или службой.'
		} )
		+firstscreen_entry( {
			thumbnail: src.img+'jumbotron/projects.jpg',
			title: 'Вы готовы участвовать в международных проектах?',
			excerpt: 'Студенты Приазовского государственного технического университета являются активными участниками программы трансевропейского сотрудничества, они занимаются разработкой инновационных предложений для европейских партнеров.'
		} )
	include ../navs/_warning
	#firstscreen-controls.slider-controls
		button#firstscreen-prev.slider-arrow.prev #[span.sr-only Предыдущий слайд]
		button#firstscreen-next.slider-arrow.next #[span.sr-only Следующий слайд]